<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#844F8E">

    <ImageView
        android:id="@+id/mainlist_image"
        android:layout_width="145dp"
        android:layout_height="167dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_icon" />

    <TextView
        android:id="@+id/mainlist_name"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        android:text="THE TITLE "
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toEndOf="@+id/mainlist_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mainlist_id"
        android:layout_width="198dp"
        android:layout_height="67dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="the user name"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/mainlist_image"
        app:layout_constraintTop_toBottomOf="@+id/mainlist_name" />

</androidx.constraintlayout.widget.ConstraintLayout>